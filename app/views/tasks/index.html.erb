<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<div id="tasks" class="container">
  <div class="row">
    <% @tasks.each do |task| %>
      <div class="col-md-4 mb-4"> 
        <div class="card d-flex flex-column h-100 text-center p-3"> 
        <%= render task %>
        <div class="mt-auto">
          <%= link_to "Show this user", task, class: "btn btn-primary btn-sm w-100 fw-bold fs-4" %>
      </div>

</div>
      </div>
    <% end %>
  </div>
</div>

<button type="button" class="btn btn-success"><%= link_to "New task", new_task_path , class: "text-white text-decoration-none"%>
</button>
<br>
<button type="button" class="btn btn-info"><%= link_to "Voir mes profils", users_path, class: "text-white text-decoration-none"%>
</button>