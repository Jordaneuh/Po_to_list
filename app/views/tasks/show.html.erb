<p style="color: green"><%= notice %></p>

<%= render @task %>

<div>
  <button type="button" class="btn btn-success"><%= link_to "Edit this task", edit_task_path(@task), class: "text-white text-decoration-none"%>
  </button>
  <button type="button" class="btn btn-danger"><%= link_to "Back to tasks", tasks_path, class: "text-white text-decoration-none"%>
  </button>


  <%= button_to "Destroy this task", @task, method: :delete %>
</div>
