<p style="color: green"><%= notice %></p>

<div class="row justify-content-center align-items-center">
  <div class="col-md-4 mb-4"> 
    <div class="card d-flex flex-column h-100 text-center p-3"> 
      <div class="w-75 mx-auto">
        <%= render @user %>
      </div>
      <ul>
<% @user.tasks.each do |task| %>
	<li><%= link_to task %></li>
<% end %>
</ul>
    </div>
  </div>
</div>


<div class="text-center">
  <button type="button" class="btn btn-success"><%= link_to "Edit this user", edit_user_path(@user), class: "text-white text-decoration-none"%>
  </button>
  <button type="button" class="btn btn-danger"><%= link_to "Back to users", users_path, class: "text-white text-decoration-none"%>
  </button>

  <%= button_to "Destroy this user", @user, method: :delete %>
</div>
